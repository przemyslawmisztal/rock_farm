<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:columnCount="4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".MainActivity$FragmentTroopTraining" >

    <TextView
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:text="@string/player_resources"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="1"
        android:contentDescription="@string/resource_food"
        android:src="@drawable/food" />

    <EditText
        android:id="@+id/foodAmountEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageView
        android:id="@+id/woodImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="2"
        android:layout_row="1"
        android:contentDescription="@string/resource_wood"
        android:src="@drawable/wood" />

    <EditText
        android:id="@+id/woodAmountEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageView
        android:id="@+id/stoneImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="2"
        android:contentDescription="@string/resource_stone"
        android:src="@drawable/stone" />

    <EditText
        android:id="@+id/stoneAmountEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageView
        android:id="@+id/oreImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="2"
        android:layout_row="2"
        android:contentDescription="@string/resource_ore"
        android:src="@drawable/ore" />

    <EditText
        android:id="@+id/oreAmountEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/training_accept_button"
        android:cropToPadding="false"
        android:src="@drawable/acceptbutton64" />

    <ImageView
        android:id="@+id/t1FootImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="4"
        android:contentDescription="@string/t1_foot_elves"
        android:src="@drawable/t1elvenfoot" />

    <EditText
        android:id="@+id/resT1FootEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageView
        android:id="@+id/t1MountedImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="5"
        android:contentDescription="@string/t1_mounted_elves"
        android:src="@drawable/t1elvenmounted" />

    <EditText
        android:id="@+id/resT1MountedEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

    <ImageView
        android:id="@+id/t1RangedImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_column="0"
        android:layout_row="6"
        android:contentDescription="@string/t1_ranged_elves"
        android:src="@drawable/t1elvenranged" />

    <EditText
        android:id="@+id/resT1RangedEditText"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="number" />

</GridLayout>